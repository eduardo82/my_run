<div id="contents">
<h1>Listing users</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Username</th>
	<th>Picture</th>
    <th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.username %></td>
	<td><%= link_to image_tag user.photo.url(:small) %></td>
    <td><%= link_to 'Show', user %>
    	<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
</div>