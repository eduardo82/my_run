<div id="contents">
<h1>Meus Treinos</h1><br />

<p id="notice"><%= notice %></p>
<%= link_to image_tag @user.photo.url(:small) %>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<div id="table">
	<table border=1>
		<tr>
			<th>Data da Corrida</th>
			<th>Distância Km</th>
			<th>Tempo Min</th>
			<th>Média Km/Min</th>
			<th>Calorias</th>
		</tr>
		<% @runs = Run.find_all_by_user_id(@user.id) %>
			<% @runs.each do |runs| %>
				<tr align="center">
					<td><%= runs.created_at.strftime("%d/%m/%Y") %></td>
					<td><%= runs.distance/1000%></td>
					<td><%= runs.alltime %></td>
					<td><%= runs.average %></td>
					<td><%= runs.calories %></td>
				</tr>	
			<% end %>	
	</table>
	<div id="total">
		<p>
			<b>Total Semana: <%= calc_week %> metros</b><br />
			<b>Total Mês: <%= calc_month %> metros</b><br />
			<b>Total Ano: <%= calc_year %> metros</b><br />
			<b>Total: <%= calc_total %> metros</b><br />
		</p>
	</div>
</div><br />
<%= link_to 'New Runs', new_run_path(@run, :user_id => @user.id) %> |
<%= link_to 'Edit User', edit_user_path(@user) %>
</div>